   issue = {6},
   journal = {PLOS Computational Biology},
   month = {6},
   pages = {e1006204},
   publisher = {Public Library of Science},
   title = {Anticipating epidemic transitions with imperfect data},
   volume = {14},
   url = {http://dx.plos.org/10.1371/journal.pcbi.1006204},
   year = {2018},
}

