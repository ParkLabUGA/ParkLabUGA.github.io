   title = {Estimating the distance to an epidemic threshold.},
   volume = {15},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/29950512 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC6030631},
   year = {2018},
